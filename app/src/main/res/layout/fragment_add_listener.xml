<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_insert_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="线路：3A"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_insert_direct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="方向：唐家-明珠中"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tv_insert_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="监听：明珠中"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/menu_grey">

        <RelativeLayout
            android:id="@+id/rl_loop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/btn_next">
            <EditText
                android:id="@+id/et_line"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

            <com.weigan.loopview.LoopView
                android:visibility="gone"
                android:id="@+id/direct_loop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:awv_textsize="24"
                app:awv_lineSpace="2"
                />
            <com.weigan.loopview.LoopView
                android:visibility="gone"
                android:id="@+id/station_loop"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:awv_textsize="24"
                app:awv_lineSpace="2"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:text="下一步"
            />
    </RelativeLayout>

</LinearLayout>