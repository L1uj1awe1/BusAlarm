<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentBackgroud">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/block_bg"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ll_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_insert_key"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="线路："
                    android:textSize="20sp"
                    android:textColor="@color/text"
                    android:gravity="center_vertical"/>

                <EditText
                    android:id="@+id/et_line"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入线路"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="20sp"/>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_insert_direct"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="方向："
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:textColor="@color/text"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_insert_station"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="监听："
                android:textSize="20sp"
                android:textColor="@color/text"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_input"
            android:layout_above="@+id/ll_btn"
            >

            <com.weigan.loopview.LoopView
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/direct_loop"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                app:awv_textsize="24"
                app:awv_lineSpace="2"
                app:awv_outerTextColor="@color/text"
                app:awv_centerTextColor="@color/busKey"
                app:awv_dividerTextColor="@color/busKey"
                />

            <com.weigan.loopview.LoopView
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:id="@+id/station_loop"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                app:awv_textsize="24"
                app:awv_lineSpace="2"
                app:awv_outerTextColor="@color/text"
                app:awv_centerTextColor="@color/busKey"
                app:awv_dividerTextColor="@color/busKey"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_pre"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_next_bg"
                android:text="上一步"
                android:textColor="@color/white"
                android:visibility="gone"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
            <Button
                android:id="@+id/btn_next"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_next_bg"
                android:text="下一步"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>