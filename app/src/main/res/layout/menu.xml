<?xml version="1.0" encoding="utf-8"?>
<com.readboyi.busalarm.wedget.MenuRootView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_menu"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/actionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="2018年已过："
                android:textColor="@color/text"
                android:textSize="18sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="100天"
                android:textColor="@color/text"
                android:textSize="34sp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 这里是 SideBar 的子视图-->
        <TextView
            android:id="@+id/tv_new_listener"
            style="@style/MenuText"
            android:drawableStart="@drawable/new_black"
            android:drawablePadding="10dp"
            android:text="新建提醒" />

        <TextView
            style="@style/MenuText"
            android:drawableStart="@drawable/stastic_black"
            android:drawablePadding="10dp"
            android:text="公交统计"/>

        <TextView
            style="@style/MenuText"
            android:drawableStart="@drawable/tuwen_black"
            android:drawablePadding="10dp"
            android:text="今日鸡汤"/>

        <TextView
            style="@style/MenuText"
            android:drawableStart="@drawable/setting_black"
            android:drawablePadding="10dp"
            android:text="应用设置"/>

        <TextView
            style="@style/MenuText"
            android:drawableStart="@drawable/advice_black"
            android:drawablePadding="10dp"
            android:text="建议反馈"/>

</com.readboyi.busalarm.wedget.MenuRootView>