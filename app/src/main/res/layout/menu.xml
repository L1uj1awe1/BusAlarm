<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/theme_color" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="2018年已过："
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="100天"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:gravity="center"/>
    </LinearLayout>

    <!-- 这里是 SideBar 的子视图-->
    <TextView
        android:id="@+id/tv_new_listener"
        style="@style/MenuText"
        android:drawableStart="@drawable/add"
        android:drawablePadding="10dp"
        android:text="新建提醒" />

    <TextView
        style="@style/MenuText"
        android:drawableStart="@drawable/stastictis"
        android:drawablePadding="10dp"
        android:text="公交统计"/>

    <TextView
        style="@style/MenuText"
        android:drawableStart="@drawable/tuwen"
        android:drawablePadding="10dp"
        android:text="今日鸡汤"/>

    <TextView
        style="@style/MenuText"
        android:drawableStart="@drawable/setting"
        android:drawablePadding="10dp"
        android:text="应用设置"/>

    <TextView
        style="@style/MenuText"
        android:drawableStart="@drawable/advice"
        android:drawablePadding="10dp"
        android:text="建议反馈"/>
</LinearLayout>